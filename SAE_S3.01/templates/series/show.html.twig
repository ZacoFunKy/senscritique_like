{% extends 'base.html.twig' %}

{% block title %}Series{% endblock %}

{% block body %}

    <style>
        @import url('https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Concert+One&display=swap');
        * {
        font-family: 'Poppins', sans-serif;
        margin:0;
        color:white;
        }
        body {
		    background-image: url('https://downloadwap.com/thumbs2/wallpapers/p2ls/2019/movies/36/9c3533c613349257.jpg');
	    }
        #tout {
            background-color: rgba(0, 0, 0, 0.534);
            height: 100vh;
            padding:0 2%;
        }
        
        header {
            display:flex;
            justify-content:space-between;
            background: linear-gradient(black 10%, transparent);
        }
        header * {
            margin: 2% 2%;
        }
        header a {      
            color: #f44336;
            font-family: 'Bebas Neue', sans-serif;
            font-size: 3vw;
            letter-spacing: 4px;
            text-shadow: 5px 3px 10px rgb(0, 0, 0);
            text-decoration: none;
        }
        #titre{
            font-family: 'Concert One', cursive;
            font-size: 4vw;
            text-shadow: 5px 3px 10px rgb(0, 0, 0);
            text-decoration: bold;
        }
        #content{
            display:flex;
            justify-content:space-between;
            padding: 2%;
		background-color: rgba(0, 0, 0, 0.63);

        }
        #partGauche{
            width: 70%;
        }
        #partDroite{
            margin: 2% 5%;
        }
        #bouton{
            display:flex;
            justify-content:center;
            margin-top:2%;
        }
        #bouton a{
             background-color: #f44336;
                border: none;
                color: black;
                padding: 10px 25px;
                text-align: center;
                text-decoration: none;
                display: flex;
                justify-content: center;
                font-size: 16px;
                border-radius: 4px;
                margin-right: 10%;
                cursor: pointer;
        }
    </style>
    <div id="tout">
        <header>
                <a href="{{path('app_default')}}">Netflop</a>
        
        </header>
        <div id="content">
            <div id="partGauche">
                <p id="titre">{{ series.title }}</p>
                </br>
                <p>{{ series.plot }}</p>
                <p>{{ series.director }}</p>
                </br>
                <h2>Bande d'annonce</h2>
                <a  href="{{ series.youtubeTrailer }}">{{ series.youtubeTrailer }}</a> 
                <h2>Awards</h2>
                <p>{{ series.awards }}</p>
                <h2>YearStart</h2>
                <p>{{ series.yearStart }}</p>
                <h2>YearEnd</h2>
                <p>{{ series.yearEnd }}</p>
                <ul> <th>Seasons</th>
            <td>
                    {% for season in series.seasons|sort((a, b) => a.number <=> b.number) %}
                            <li>Saison {{ season.number }} ({{ season.episodes|length }} Ã©pisodes)</li>
                    {% endfor %}
                </td>
                </ul>
            </div>
            <div id="partDroite">
                    <tr>
                        <td><img src="{{ path('poster_series_show', {'id': series.id} ) }}"/></td>
                    </tr>
            </div>
        </div>
        <div id="bouton">
            <a  href="{{ path('app_series_index') }}">back to list</a> 
        </div>
    </div>
   {# <a href="{{ path('app_series_edit', {'id': series.id}) }}">edit</a> #}

   {#  {{ include('series/_delete_form.html.twig') }} #} 
{% endblock %}
