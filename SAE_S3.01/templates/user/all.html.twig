{% extends 'base.html.twig' %}
{% set pagination = 10 %}
{% block title %}Series index
{% endblock %}

{% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="../style/styleIndexS.css">
{% endblock %}

{% block body %}
	<div id="tout">

		<header>
			<a href="{{path('app_default')}}" class="title">Netflop</a>
			<div id="id">
				{% include 'header.html.twig' %}
			</div>
		</header>
		<div id="content">
			<h1>Utilisateurs</h1>
			{% if form is defined %}
  {{ form_start(form) }}
 
  {{ form_widget(form) }}
  <input type="submit" value="Rechercher" />

  <style>
  input[type="text"]{
    width: 20%;
    height: 30px;
    border-radius: 5px;
    border: 1px solid #ccc;
    padding: 5px;
    font-size: 16px;
    color: black;
  }

  input[value="Rechercher"]{
        background-color: #f44336;
            border: none;
            color: black;
            padding: 10px 25px;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
            margin: 5px;
            margin-bottom: 15px;
  }

  </style>
 {{ form_end(form) }}
 {% endif %}
            			<a class="boutonModif" href="{{ path('app_series_index') }}" style="margin-bottom:15px"> Retour</a>
			<table
				class="table">
				<tbody id="afficheSeries">
				{% for user in users %}
						<tr id="serie">
							<td> 
							{% if user.photo is not null %}
							<img src="{{ path('photo_user', {'id': user.id} ) }}" alt="photo de profil" class="border-radius: 50%;" width="400px" height="50px">
							{% else %}
							<img src="{{ asset('images/avatar.png') }}" alt="photo de profil" >
							{% endif %}
							</td>
							<td>{{ user.name }}</td>
							<td>
									<a class="boutonModif" href="#">Afficher</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="11">Pas d'autres Utilisateurs trouv√©es</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}


